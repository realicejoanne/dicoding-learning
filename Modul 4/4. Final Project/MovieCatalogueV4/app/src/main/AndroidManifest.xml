<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="trianne.dicoding.moviecataloguev4">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="trianne.dicoding.moviecataloguev4.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="trianne.dicoding.moviecataloguev4.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <provider
            android:name="trianne.dicoding.moviecataloguev4.provider.FavoriteProvider"
            android:authorities="trianne.dicoding.moviecataloguev4"
            android:exported="true"
            android:readPermission="trianne.dicoding.moviecataloguev4.READ_DATABASE"
            android:writePermission="trianne.dicoding.moviecataloguev4.WRITE_DATABASE" />

        <activity
            android:name="trianne.dicoding.moviecataloguev4.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="trianne.dicoding.moviecataloguev4.DetailActivity"/>

        <activity android:name="trianne.dicoding.moviecataloguev4.FavoriteActivity" />
        <activity android:name="trianne.dicoding.moviecataloguev4.NowplayingActivity" />
        <activity android:name="trianne.dicoding.moviecataloguev4.UpcomingActivity"/>
    </application>

</manifest>